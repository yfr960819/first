<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huzi.MainActivity" >

    <RadioGroup
        android:id="@+id/radioGrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:contentDescription="人数"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/siRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="四人打" >
        </RadioButton>

        <RadioButton
            android:id="@+id/sanRadio"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="三人打" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/yuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGrop"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打多大："
            android:textSize="22dp" />

        <EditText
             android:id="@+id/caiTuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0.5"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/胡"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wanJia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yuan"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="玩家" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="甲" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="乙" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="丙" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="丁" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/huoNiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wanJia"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活鸟" />

        <EditText
            android:id="@+id/1HuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0" 
            android:inputType="numberSigned"/>

        <EditText
            android:id="@+id/2HuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
        

        <EditText
            android:id="@+id/3HuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/4HuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuoNiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/huoNiao"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拖鸟" />

        <EditText
            android:id="@+id/1TuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
             android:id="@+id/2TuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/3TuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
             android:id="@+id/4TuoNiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/huXi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tuoNiao"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="胡息" />

        <EditText
            android:id="@+id/1HuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/2HuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/3HuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/4HuXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberSigned" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/huXi"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结果"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/1result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/2result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/3result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text="0"
           android:textSize="20dp"  />

        <TextView
            android:id="@+id/4result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:text="0"
           android:textSize="20dp"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jieGuo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/1Btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="计算" />

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除" />

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出" />
    </LinearLayout>

    <TextView
        android:id="@+id/coyp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp" />

</RelativeLayout>